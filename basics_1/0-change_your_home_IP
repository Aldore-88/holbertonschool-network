#!/usr/bin/env bash
# Script to configure Ubuntu server

# Modify /etc/hosts to change localhost and add facebook.com
sudo sed -i 's/^127\.0\.0\.1\s\+localhost/127.0.0.2 localhost/' /etc/hosts

# Add facebook.com entry if it doesn't already exist
if ! grep -q "facebook.com" /etc/hosts; then
    echo "8.8.8.8 facebook.com" | sudo tee -a /etc/hosts > /dev/null
fi